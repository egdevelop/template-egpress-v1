---
import type { CollectionEntry } from 'astro:content';
import { getDesignTokens } from '../config/siteSettings';

interface Props {
  post: CollectionEntry<'blog'>;
  featured?: boolean;
}

const { post, featured = false } = Astro.props;
const { title, description, pubDate, author, category, featuredImage } = post.data;
const { colors } = getDesignTokens();
const avatarBgColor = colors.primary.replace('#', '');

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    day: 'numeric',
    month: 'short',
    year: 'numeric'
  });
}

function getReadingTime(content: string): number {
  const wordsPerMinute = 200;
  const words = content.split(/\s+/).length;
  return Math.ceil(words / wordsPerMinute);
}

function getCategoryColor(category: string): { bg: string; text: string } {
  let hash = 0;
  for (let i = 0; i < category.length; i++) {
    hash = category.charCodeAt(i) + ((hash << 5) - hash);
  }
  const hue = Math.abs(hash % 360);
  return {
    bg: `hsla(${hue}, 70%, 50%, 0.1)`,
    text: `hsl(${hue}, 70%, 40%)`
  };
}

const readingTime = getReadingTime(post.body || '');
const categoryColor = getCategoryColor(category);
---

<article class={`card ${featured ? 'md:flex' : ''}`}>
  <a href={`/blog/${post.id}`} class={`block ${featured ? 'md:w-1/2' : ''}`}>
    <div class={`relative overflow-hidden ${featured ? 'h-64 md:h-full' : 'h-48'}`}>
      {featuredImage ? (
        <img 
          src={featuredImage}
          alt={title}
          class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
          loading="lazy"
          width="400"
          height="300"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center" style="background: linear-gradient(to bottom right, var(--color-border), var(--color-background));">
          <svg class="w-12 h-12" style="color: var(--color-text-muted);" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      )}
    </div>
  </a>
  
  <div class={`p-5 ${featured ? 'md:w-1/2 md:p-8 md:flex md:flex-col md:justify-center' : ''}`}>
    <div class="flex items-center gap-2 mb-3">
      <span class="tag" style={`background-color: ${categoryColor.bg}; color: ${categoryColor.text};`}>{category.replace('-', ' ')}</span>
      <span style="color: var(--color-text-muted);">â€¢</span>
      <span class="text-xs" style="color: var(--color-text-muted);">{readingTime} min read</span>
    </div>
    
    <a href={`/blog/${post.id}`}>
      <h3 class={`font-bold mb-2 card-title transition-colors ${featured ? 'text-2xl' : 'text-lg'} line-clamp-2`} style="color: var(--color-text-primary);">
        {title}
      </h3>
    </a>
    
    <p class={`mb-4 line-clamp-2 ${featured ? 'text-base' : 'text-sm'}`} style="color: var(--color-text-secondary);">
      {description}
    </p>
    
    <div class="flex items-center gap-3 mt-auto">
      <img 
        src={author.avatar || `https://ui-avatars.com/api/?name=${encodeURIComponent(author.name)}&background=${avatarBgColor}&color=fff&size=32`}
        alt={author.name}
        class="w-8 h-8 rounded-full"
        loading="lazy"
        width="32"
        height="32"
      />
      <div>
        <p class="text-sm font-medium" style="color: var(--color-text-primary);">{author.name}</p>
        <p class="text-xs" style="color: var(--color-text-muted);">{formatDate(pubDate)}</p>
      </div>
    </div>
  </div>
</article>

<style>
  .card-title:hover {
    color: var(--color-primary) !important;
  }
</style>
